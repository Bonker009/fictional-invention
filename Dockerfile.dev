FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./
COPY prisma ./prisma/

# Install dependencies
RUN npm install

# Generate Prisma Client
RUN npx prisma generate

# Copy source code
COPY . .

EXPOSE 3003

ENV NODE_ENV=development
ENV PORT=3003

# Run migrations and start dev server
CMD ["sh", "-c", "npx prisma migrate deploy && npm run dev"]
