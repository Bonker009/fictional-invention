{
  "name": "khmer-calendar-api",
  "version": "2.0.0",
  "description": "Cambodia Khmer Calendar API using Express.js with TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "prebuild": "rimraf dist",
    "postbuild": "copyfiles -u 1 src/**/*.json dist && copyfiles -u 1 src/**/*.sql dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "db:migrate": "ts-node src/infrastructure/database/migrate.ts",
    "db:seed": "ts-node src/infrastructure/database/seed.ts",
    "db:setup": "npm run db:migrate && npm run db:seed"
  },
  "keywords": [
    "khmer",
    "cambodia",
    "calendar",
    "api",
    "express",
    "typescript",
    "buddhist-era",
    "holidays"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "graphql": "^15.8.0",
    "express-graphql": "^0.12.0",
    "joi": "^17.11.0",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "etag": "^1.8.1",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "copyfiles": "^2.4.1",
    "@types/pg": "^8.10.9",
    "@types/node-cache": "^4.2.5"
  }
}
